<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
	<application>
		<locale-config>
			<default-locale>pl_PL</default-locale>
			<supported-locale>pl_PL</supported-locale>
			<supported-locale>en_US</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>bundle.lang.auth</base-name>
			<var>auth</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>bundle.lang.admin.systemRoles</base-name>
			<var>sysRes</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>bundle.lang.admin.departments</base-name>
			<var>deptRes</var>
		</resource-bundle>
	</application>
	<factory>
		<exception-handler-factory>pw.mario.faces.handler.JournalExceptionHandlerFactory</exception-handler-factory>
	</factory>
</faces-config>
